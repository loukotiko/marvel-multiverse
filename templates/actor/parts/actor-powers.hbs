{{#each powers as |powers powerSet|}}
  {{#if powers}}
    <ol class="mm-item-list">
      <li class="flexrow item mm-item-header">
        <span>{{localize
            "MARVEL_MULTIVERSE.Item.Power.PowerSET"
            set=powerSet
          }}</span>
        <hr />
        <div class="item-controls">
          <a
            class="item-control item-create"
            title="{{localize 'DOCUMENT.Create' type="Power"}}"
            data-type="power"
            data-power-set="{{powerSet}}"
          >
            <i class="fas fa-plus"></i>
          </a>
        </div>
      </li>
      {{#each powers as |item id|}}
        <li class="flexrow item mm-item -nowrap" data-item-id="{{item._id}}">
          <div class="item-name mm-item-name">
            <details>
              <summary>
                <div class="item-controls">
                {{#ifm item.system.cost item.system.attackRange}}
                  <div class="tags">
                    {{#if item.system.cost}}
                      <span>{{item.system.cost}}</span>
                    {{/if}}
                  </div>
                {{/ifm}}
                  <a
                    class="item-control item-edit"
                    title="{{localize 'DOCUMENT.Edit' type="power"}}"
                  >
                    <i class="fas fa-edit"></i>
                  </a>
                  <a
                    class="item-control item-delete"
                    title="{{localize 'DOCUMENT.Delete' type="power"}}"
                  >
                    <i class="fas fa-trash"></i>
                  </a>
                </div>

                <a
                  class="rollable"
                  data-roll-type="chat"
                  data-label="{{item.name}}"
                >
                  <span><i class="fas fa-comment"></i></span>
                </a>

                {{#if item.system.ability}}
                  <a
                    class="rollable"
                    data-roll-type="item"
                    data-label="{{item.system.ability}}"
                  >
                    <span><i class="fas fa-dice"></i></span>
                  </a>
                {{/if}}

                <span style="font-size: 110%; line-height: normal;">
                  {{item.name}}
                </span>
                
                {{#actionType item.system.action "Action"}}
                  <i class="fas fa-bolt"
                  {{#actionType item.system.action "Reaction"}}
                    style="color: #CC0000"
                  {{else}}
                    style="color: #999999"
                  {{/actionType}}
                  title="Reaction"></i>
                  <i class="fas fa-sparkle"
                  {{#actionType item.system.action "Standard"}}
                    style="color: #CC0000"
                  {{else}}
                    style="color: #999999"
                  {{/actionType}}
                  title="Action"></i>
                  <i class="fas fa-ski-boot"
                  {{#actionType item.system.action "Movement"}}
                    style="color: #CC0000"
                  {{else}}
                    style="color: #999999"
                  {{/actionType}}
                  title="Movement"></i>
                {{/actionType}}
                
              </summary>
              <div>
                {{{item.system.description}}}
              </div>
              <hr />
              <div style="text-transform: none;">
                {{#if item.system.prerequisites}}
                  <p style="color: #999999">
                    <i class="fas fa-chevrons-up"></i>
                    {{item.system.prerequisites}}
                  </p>
                {{/if}}
                {{#if item.system.trigger}}
                  <p style="color:#CC0000;text-transform: none">
                    <i class="fas fa-bolt" title="Reaction"></i>
                    <span>{{item.system.trigger}}</span>
                  </p>
                {{/if}}
                {{{item.system.effect}}}
              </div>
            </details>
          </div>
        </li>
      {{/each}}
    </ol>
  {{/if}}
{{/each}}